{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "incremental": true,
    "jsx": "preserve",

    "baseUrl": ".",
    "paths": {
      "@gafus/prisma": ["packages/prisma/src/index.ts"],
      "@gafus/prisma/*": ["packages/prisma/src/*"],
      "@queues": ["packages/queues/src"],
      "@queues/*": ["packages/queues/src/*"],
      "@gafus/queues": ["packages/queues/src/index.ts"],
      "@gafus/queues/*": ["packages/queues/src/*"],
      "@gafus/webpush": ["packages/webpush/src/index.ts"],
      "@gafus/webpush/db": ["packages/webpush/src/db.ts"],
      "@gafus/types": ["packages/types/src/index.ts"],
      "@gafus/types/*": ["packages/types/src/*"],
      "@gafus/error-handling": ["packages/error-handling/src/index.ts"],
      "@gafus/error-handling/*": ["packages/error-handling/src/*"],
      "@gafus/auth": ["packages/auth/src/index.ts"],
      "@gafus/auth/*": ["packages/auth/src/*"],
      "@gafus/csrf": ["packages/csrf/src/index.ts"],
      "@gafus/csrf/*": ["packages/csrf/src/*"],
      "@gafus/ui-components": ["packages/ui-components/src/index.ts"],
      "@gafus/ui-components/*": ["packages/ui-components/src/*"],
      "@gafus/ui-components/": ["packages/ui-components/src/"]
    },

    "typeRoots": ["./node_modules/@types", "packages/types/src"]
  }
}
