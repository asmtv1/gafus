# Base stage - для сборки
FROM node:20-alpine AS base

WORKDIR /app

# Включаем pnpm
RUN corepack enable && corepack prepare pnpm@9.1.0 --activate

# Копируем файлы конфигурации
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json tsconfig.base.json ./

# Копируем исходный код
COPY packages ./packages
COPY apps/api ./apps/api

# Устанавливаем зависимости
RUN pnpm install --frozen-lockfile

# Копируем tsconfig файлы
COPY packages/*/tsconfig.json ./packages/*/
COPY apps/api/tsconfig.json ./apps/api/

# Генерируем Prisma client (без ERD в контейнере)
RUN cd packages/prisma \
  && cp schema.prisma schema.prisma.bak \
  && awk 'BEGIN{skip=0} /^generator erd \{/{skip=1} skip && /^\}/{skip=0; next} !skip {print}' schema.prisma > schema.tmp \
  && mv schema.tmp schema.prisma \
  && for i in 1 2 3; do pnpm db:generate && break || (echo "Prisma generate attempt $i failed, retrying..." && sleep 5); done \
  && mv schema.prisma.bak schema.prisma

# Собираем все необходимые пакеты для API
RUN pnpm build --filter @gafus/types --filter @gafus/logger --filter @gafus/prisma --filter @gafus/queues --filter @gafus/auth --filter @gafus/core --filter @gafus/cdn-upload --filter @gafus/video-access --filter @gafus/api

# Готовим production зависимости через pnpm deploy
RUN pnpm deploy --legacy --filter @gafus/api --prod --no-optional /app/deploy
# Восстанавливаем .pnpm для работы симлинков
RUN if [ -d /app/node_modules/.pnpm ]; then \
      mkdir -p /app/deploy/node_modules/.pnpm && \
      cp -r /app/node_modules/.pnpm/* /app/deploy/node_modules/.pnpm/; \
    fi

# Production stage - только runtime
FROM node:20-alpine AS runner

WORKDIR /app

# Создаем пользователя
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 hono

# Устанавливаем только необходимые пакеты
RUN apk add --no-cache curl wget

# Копируем production-ready структуру из deploy
COPY --from=base --chown=hono:nodejs /app/deploy/ ./
# Копируем собранные файлы API (перезаписываем если нужно)
COPY --from=base --chown=hono:nodejs /app/apps/api/dist ./dist
USER hono

# Устанавливаем переменные окружения
ENV NODE_ENV=production
ENV API_PORT=3001

EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3001/health || exit 1

CMD ["node", "dist/index.js"]
