{
  "dashboard": {
    "title": "Доступность сервисов",
    "tags": ["services", "availability", "blackbox"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "15s",
    "panels": [
      {
        "id": 1,
        "title": "Статус доступности сервисов",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "probe_success{job=\"services-health\"}",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "min": 0,
            "max": 1,
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "Down", "color": "red"},
                  "1": {"text": "Up", "color": "green"}
                }
              }
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Время ответа сервисов (секунды)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "probe_http_duration_seconds{job=\"services-health\"}",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 3,
        "title": "HTTP статус коды",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "probe_http_status_code{job=\"services-health\"}",
            "legendFormat": "{{service}} - {{code}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none"
          }
        }
      }
    ]
  }
}

