# syntax=docker/dockerfile:1

FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@9.1.0 --activate

# Copy workspace files
COPY pnpm-workspace.yaml ./
COPY package.json pnpm-lock.yaml ./
COPY tsconfig.base.json ./

# Copy bull-board package.json
COPY apps/bull-board/package.json ./apps/bull-board/package.json

# Copy queues package.json
COPY packages/queues/package.json ./packages/queues/package.json

# Install dependencies (including dev dependencies for tsx)
RUN pnpm install --filter @gafus/bull-board
RUN pnpm install --filter @gafus/queues
RUN pnpm store prune

# Copy source code
COPY apps/bull-board ./apps/bull-board
COPY packages/queues ./packages/queues

# Build queues package
RUN cd packages/queues && pnpm build

# Set working directory
WORKDIR /app

# Expose port
EXPOSE 3002

# Start the bull-board
CMD ["pnpm", "start"]
