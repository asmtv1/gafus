{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Базовые */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    /* Пути и алиасы для web */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@features/*": ["./src/features/*"],
      "@shared/*": ["./src/shared/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@gafus/csrf": ["../../packages/csrf/src/index.ts"],
      "@gafus/csrf/*": ["../../packages/csrf/src/*"],
      "@gafus/auth": ["../../packages/auth/dist/index.d.ts"],
      "@gafus/auth/*": ["../../packages/auth/dist/*"],
      "@gafus/prisma": ["../../packages/prisma/dist/index.d.ts"],
      "@gafus/prisma/*": ["../../packages/prisma/dist/*"],
      "@gafus/types": ["../../packages/types/src/index.ts"],
      "@gafus/types/*": ["../../packages/types/src/*"],
      "@gafus/error-handling": ["../../packages/error-handling/dist/error-handling/src/index.d.ts"],
      "@gafus/error-handling/*": ["../../packages/error-handling/dist/error-handling/src/*"],
      "@gafus/react-query": ["../../packages/react-query/dist/index.d.ts"],
      "@gafus/react-query/*": ["../../packages/react-query/dist/*"],
      "@gafus/webpush": ["../../packages/webpush/dist/index.js"],
      "@gafus/webpush/*": ["../../packages/webpush/dist/*"]
    },
    /* Типы */
    "typeRoots": ["./types", "../../node_modules/@types"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/webpush/src/db.ts",
    "../../packages/webpush/src/index.ts",
    "next-env.d.ts",
    "src/utils/getCurrentUserId.ts",
    "src/utils/push.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
