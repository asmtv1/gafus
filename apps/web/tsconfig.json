{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Базовые */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "types": [],
    /* Пути и алиасы для web */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@features/*": ["./src/features/*"],
      "@shared/*": ["./src/shared/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@gafus/core": ["../../packages/core/src/index.ts"],
      "@gafus/core/services/course": ["../../packages/core/src/services/course/index.ts"],
      "@gafus/core/services/diary": ["../../packages/core/src/services/diary/index.ts"],
      "@gafus/core/services/user": ["../../packages/core/src/services/user/index.ts"],
      "@gafus/core/services/auth": ["../../packages/core/src/services/auth/index.ts"],
      "@gafus/core/services/notifications": [
        "../../packages/core/src/services/notifications/index.ts"
      ],
      "@gafus/core/services/subscriptions": [
        "../../packages/core/src/services/subscriptions/index.ts"
      ],
      "@gafus/core/services/tracking": ["../../packages/core/src/services/tracking/index.ts"],
      "@gafus/core/services/achievements": [
        "../../packages/core/src/services/achievements/index.ts"
      ],
      "@gafus/core/services/notes": ["../../packages/core/src/services/notes/index.ts"],
      "@gafus/core/services/payments": ["../../packages/core/src/services/payments/index.ts"],
      "@gafus/core/services/video": ["../../packages/core/src/services/video/index.ts"],
      "@gafus/core/errors": ["../../packages/core/src/errors/index.ts"],
      "@gafus/core/utils": ["../../packages/core/src/utils/index.ts"],
      "@gafus/core/utils/social": ["../../packages/core/src/utils/social.ts"],
      "@gafus/core/utils/training": ["../../packages/core/src/utils/training.ts"],
      "@gafus/core/utils/retry": ["../../packages/core/src/utils/retry.ts"],
      "@gafus/csrf": ["../../packages/csrf/src/index.ts"],
      "@gafus/csrf/*": ["../../packages/csrf/src/*"],
      "@gafus/auth": ["../../packages/auth/dist/index.d.ts"],
      "@gafus/auth/*": ["../../packages/auth/dist/*"],
      "@gafus/prisma": ["../../packages/prisma/dist/index.d.ts"],
      "@gafus/prisma/*": ["../../packages/prisma/dist/*"],
      "@gafus/types": ["../../packages/types/src/index.ts"],
      "@gafus/types/*": ["../../packages/types/src/*"],
      "@gafus/error-handling": ["../../packages/error-handling/dist/index.d.ts"],
      "@gafus/error-handling/*": ["../../packages/error-handling/dist/*"],
      "@gafus/react-query": ["../../packages/react-query/dist/index.d.ts"],
      "@gafus/react-query/*": ["../../packages/react-query/dist/*"],
      "@gafus/webpush": ["../../packages/webpush/dist/index.js"],
      "@gafus/webpush/*": ["../../packages/webpush/dist/*"]
    },
    /* Типы */
    "typeRoots": ["./types", "../../node_modules/@types"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/webpush/src/db.ts",
    "../../packages/webpush/src/index.ts",
    "next-env.d.ts",
    "src/utils/getCurrentUserId.ts",
    "src/utils/push.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
