# syntax=docker/dockerfile:1

FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@9.1.0 --activate

# Copy workspace files
COPY pnpm-workspace.yaml ./
COPY package.json pnpm-lock.yaml ./

# Copy worker package.json
COPY packages/worker/package.json ./packages/worker/package.json

# Copy prisma package.json
COPY packages/prisma/package.json ./packages/prisma/package.json

# Copy queues package.json
COPY packages/queues/package.json ./packages/queues/package.json

# Install only production dependencies
RUN pnpm install --prod --filter @gafus/worker --ignore-scripts
RUN pnpm install --filter @gafus/prisma --ignore-scripts
RUN pnpm store prune

# Copy source code
COPY packages/worker ./packages/worker
# Copy node_modules and prisma files
COPY --from=builder /app/node_modules ./node_modules
COPY packages/prisma ./packages/prisma
COPY packages/queues ./packages/queues

# Generate Prisma client
RUN pnpm --filter @gafus/prisma run prisma:generate

# Set working directory
WORKDIR /app/packages/worker

# Start the worker
CMD ["pnpm", "start"]
