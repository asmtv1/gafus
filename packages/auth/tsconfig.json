{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "declaration": false,
    "declarationMap": false,
    "outDir": "dist",
    "rootDir": "src",

    "incremental": true,
    "composite": false,

    "skipLibCheck": true,
    "typeRoots": [
      "../../node_modules/@types",
      "../../packages/prisma/dist"
    ],

    "baseUrl": ".",
    "paths": {
      "@gafus/prisma": ["../../packages/prisma/dist/index.d.ts"],
      "@gafus/prisma/*": ["../../packages/prisma/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
