{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "rootDir": "src",

    "incremental": true,
    "composite": false,

    "skipLibCheck": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],

    "baseUrl": ".",
    "paths": {
      "@gafus/prisma": ["../../packages/prisma/dist/index.d.ts"],
      "@gafus/prisma/*": ["../../packages/prisma/dist/*"],
      "@gafus/types": ["../../packages/types/src/index.ts"],
      "@gafus/types/*": ["../../packages/types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
